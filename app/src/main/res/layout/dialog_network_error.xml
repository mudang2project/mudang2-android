<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/rounding_10">

    <ImageView
        android:id="@+id/dialog_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_network_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="네트워크 연결 실패"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_iv"
        app:layout_constraintStart_toStartOf="@+id/dialog_iv"
        app:layout_constraintTop_toBottomOf="@+id/dialog_iv" />

    <TextView
        android:id="@+id/dialog_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:text="네트워크 연결 상태를 확인해주세요."
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/dialog_title_tv"
        app:layout_constraintStart_toStartOf="@+id/dialog_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title_tv" />

    <Button
        android:id="@+id/dialog_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/background"
        android:text="확인"
        android:textSize="16dp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintEnd_toEndOf="@+id/dialog_info_tv"
        app:layout_constraintStart_toStartOf="@+id/dialog_info_tv"
        app:layout_constraintTop_toBottomOf="@+id/dialog_info_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>